  <!-- DIAGNOSTIC RULES -->
  <diagnostic_rules>
    
    <!-- Rule 1: Generalized Anxiety Disorder -->
    <rule id="rule_1" disease="generalized_anxiety_disorder">
      <required_symptoms minimum_count="4">
        <symptom ref="persistent_worry" required="true"/>
        <symptom ref="excessive_nervousness" required="true"/>
        <symptom ref="concentration_difficulties" required="true"/>
        <symptom_group operator="OR" required="true">
          <symptom ref="muscle_tension"/>
          <symptom ref="sleep_disturbances"/>
        </symptom_group>
      </required_symptoms>
      <required_risk_factors>
        <risk_factor_group operator="OR" required="true">
          <risk_factor ref="chronic_stress"/>
          <risk_factor ref="genetic_predisposition"/>
        </risk_factor_group>
      </required_risk_factors>
    </rule>
    
    <!-- Rule 2: Panic Disorder -->
    <rule id="rule_2" disease="panic_disorder">
      <required_symptoms minimum_count="4">
        <symptom ref="heart_palpitations" required="true"/>
        <symptom ref="excessive_sweating" required="true"/>
        <symptom ref="tremors" required="true"/>
        <symptom ref="excessive_nervousness" required="true"/>
      </required_symptoms>
    </rule>
    
    <!-- Rule 3: Major Depression -->
    <rule id="rule_3" disease="major_depression">
      <required_symptoms minimum_count="5">
        <symptom ref="persistent_sadness" required="true"/>
        <symptom ref="loss_of_interest" required="true"/>
        <symptom_group operator="OR" required="true">
          <symptom ref="appetite_changes"/>
          <symptom ref="sleep_disturbances"/>
        </symptom_group>
        <symptom_group operator="OR" required="true">
          <symptom ref="chronic_fatigue"/>
          <symptom ref="concentration_difficulties"/>
        </symptom_group>
      </required_symptoms>
      <required_risk_factors>
        <risk_factor_group operator="OR" required="true">
          <risk_factor ref="chronic_stress"/>
          <risk_factor ref="genetic_predisposition"/>
        </risk_factor_group>
      </required_risk_factors>
    </rule>
    
    <!-- Rule 4: Chronic Migraine -->
    <rule id="rule_4" disease="chronic_migraine">
      <required_symptoms minimum_count="2">
        <symptom ref="pulsating_headache" required="true"/>
        <symptom_group operator="OR" required="true">
          <symptom ref="light_sensitivity"/>
          <symptom ref="nausea_vomiting"/>
        </symptom_group>
      </required_symptoms>
    </rule>
    
    <!-- Rule 5: Epilepsy -->
    <rule id="rule_5" disease="epilepsy">
      <required_symptoms>
        <symptom ref="seizures" required="true"/>
        <symptom_group operator="OR" required="true">
          <symptom ref="loss_of_consciousness"/>
          <symptom ref="tremors"/>
        </symptom_group>
      </required_symptoms>
      <required_risk_factors>
        <risk_factor_group operator="OR" required="true">
          <risk_factor ref="head_trauma"/>
          <risk_factor ref="genetic_predisposition"/>
        </risk_factor_group>
      </required_risk_factors>
    </rule>
    
    <!-- Rule 6: Parkinson's Disease -->
    <rule id="rule_6" disease="parkinsons_disease">
      <required_symptoms>
        <symptom ref="resting_tremor" required="true"/>
        <symptom ref="muscle_rigidity" required="true"/>
        <symptom ref="slowness_of_movement" required="true"/>
      </required_symptoms>
      <required_risk_factors>
        <risk_factor ref="advanced_age" required="true"/>
      </required_risk_factors>
    </rule>
    
    <!-- Rule 7: Alzheimer's Disease -->
    <rule id="rule_7" disease="alzheimers_disease">
      <required_symptoms minimum_count="3">
        <symptom ref="recent_memory_loss" required="true"/>
        <symptom ref="time_space_disorientation" required="true"/>
        <symptom_group operator="OR" required="true">
          <symptom ref="speech_difficulties"/>
          <symptom ref="judgment_difficulties"/>
        </symptom_group>
      </required_symptoms>
      <required_risk_factors>
        <risk_factor ref="advanced_age" required="true"/>
      </required_risk_factors>
    </rule>
    
    <!-- Rule 8: Peripheral Neuropathy -->
    <rule id="rule_8" disease="peripheral_neuropathy">
      <required_symptoms>
        <symptom ref="limb_numbness" required="true"/>
        <symptom ref="tingling_sensation" required="true"/>
        <symptom_group operator="OR" required="true">
          <symptom ref="neuropathic_pain"/>
          <symptom ref="muscle_weakness"/>
        </symptom_group>
      </required_symptoms>
      <required_risk_factors>
        <risk_factor_group operator="OR" required="true">
          <risk_factor ref="diabetes"/>
          <risk_factor ref="alcohol_consumption"/>
        </risk_factor_group>
      </required_risk_factors>
    </rule>
    
    <!-- Rule 9: Brain Tumor -->
    <rule id="rule_9" disease="brain_tumor">
      <required_symptoms minimum_count="3">
        <symptom ref="morning_headache" required="true"/>
        <symptom ref="projectile_vomiting" required="true"/>
        <symptom_group operator="OR" required="true">
          <symptom ref="seizures"/>
          <symptom ref="personality_changes"/>
        </symptom_group>
      </required_symptoms>
    </rule>
    
    <!-- Rule 10: Multiple Sclerosis -->
    <rule id="rule_10" disease="multiple_sclerosis">
      <required_symptoms minimum_count="3">
        <symptom ref="muscle_weakness" required="true"/>
        <symptom ref="limb_numbness" required="true"/>
        <symptom_group operator="OR" required="true">
          <symptom ref="speech_difficulties"/>
          <symptom ref="tremors"/>
        </symptom_group>
      </required_symptoms>
    </rule>
    
  </diagnostic_rules>
  
